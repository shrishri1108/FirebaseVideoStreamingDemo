<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addVideo">

    <VideoView
        android:id="@+id/my_video_screen"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"
        android:text=" Browse "
        android:paddingTop="17dp"
        android:textStyle="bold|italic"
        android:paddingBottom="17dp"
        android:paddingRight="27dp"
        android:paddingLeft="27dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/my_video_screen"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_browse"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="47dp"
        android:textSize="17sp"
        android:layout_marginTop="17dp"
        android:hint="enter your video name here "
        android:id="@+id/et_video_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="49dp"
        />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Upload"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:textSize="17sp"
        android:layout_marginTop="17dp"
        android:paddingLeft="29dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingRight="29dp"
        app:layout_constraintTop_toBottomOf="@+id/et_video_name"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/progress_bars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>